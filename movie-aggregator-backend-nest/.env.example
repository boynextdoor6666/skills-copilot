# MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=Aidar1904
DB_NAME=warehouse

# JWT
JWT_SECRET=super_secret_key_change_me
JWT_EXPIRES=7d

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_TO_FILES=true
LOG_DIR=./logs
LOG_LEVEL=info
LOG_RETENTION_DAYS_INFO=14
LOG_RETENTION_DAYS_ERROR=30
LOG_RETENTION_DAYS_AUDIT=90

# ==================== EXTERNAL APIs ====================

# TMDB (The Movie Database) - для фильмов и сериалов
# Получить ключ: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# IGDB (Internet Game Database) - для игр
# Использует Twitch OAuth. Получить credentials:
# 1. Зарегистрируйтесь на https://dev.twitch.tv/
# 2. Создайте приложение в Developer Console
# 3. Скопируйте Client ID и Client Secret
IGDB_CLIENT_ID=your_twitch_client_id_here
IGDB_CLIENT_SECRET=your_twitch_client_secret_here

# ==================== KAFKA ====================
# Включить отправку событий в Kafka
KAFKA_ENABLED=true
# Адреса брокеров Kafka (через запятую для кластера)
KAFKA_BROKERS=localhost:9092
# ID клиента
KAFKA_CLIENT_ID=cinevibe-backend

# ==================== CLICKHOUSE ====================
# Включить чтение аналитики из ClickHouse
CLICKHOUSE_ENABLED=true
# Хост ClickHouse
CLICKHOUSE_HOST=localhost
# Порт (HTTP интерфейс)
CLICKHOUSE_PORT=8123
# Пользователь
CLICKHOUSE_USER=default
# Пароль (пустой по умолчанию)
CLICKHOUSE_PASSWORD=
# База данных
CLICKHOUSE_DATABASE=analytics
